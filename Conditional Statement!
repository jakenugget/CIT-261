<!DOCTYPE HTML>
<html lang="en-us">
<head>
<meta charset="utf-8">
<title>What to wear?</title>

<script>
/* Input: Workout
* Processing: Decide what footwear to use
* Output: Footwear
*/
function footlit() {
var weather = document.getElementById('footInputBox').value;
var footwear = "shoes";

if (weather == "running") 
{
footwear = "running shoes";
}
else if (weather == "crossfit")
{
footwear = "metcons";
}
else if (weather == "football") 
{
footwear = "cleats";
}
else 
{
footwear = "shoes";
}
document.getElementById('footDiv').innerHTML = ("You should wear " + footwear + " and good luck.");
}
</script>
</head>

<body>
What workout will you do today? : <input type="text" id="footInputBox">
<button type="button" onclick="footlit()">Help me decide</button>
<div id="footDiv"></div>
</body>
</html>
